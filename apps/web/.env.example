# Development Environment Variables
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="Brenda Cereals"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/brenda_cereals"
POSTGRES_USER=brenda_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=brenda_cereals

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-super-secret-key-here

# Payment APIs
# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_SHORTCODE=174379
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENVIRONMENT=sandbox

# Safaricom Paybill Configuration
SAFARICOM_PAYBILL_NUMBER=174379
SAFARICOM_BUSINESS_SHORTCODE=174379
SAFARICOM_CONSUMER_KEY=your_safaricom_consumer_key
SAFARICOM_CONSUMER_SECRET=your_safaricom_consumer_secret
SAFARICOM_PASSKEY=your_safaricom_passkey
SAFARICOM_ENVIRONMENT=sandbox

# Bitcoin Wallet Configuration
BITCOIN_WALLET_ADDRESS=your_bitcoin_wallet_address
BITCOIN_NETWORK=testnet
BITCOIN_API_URL=https://blockstream.info/testnet/api

# File Upload & Storage
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# Development Tools
ANALYZE=false
BUNDLE_ANALYZE=false
