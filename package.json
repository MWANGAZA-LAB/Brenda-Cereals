{
  "name": "brenda-cereals",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run type-check && cd apps/web && npm run dev",
    "build": "npm run type-check && npm run build:packages && cd apps/web && npm run build",
    "build:packages": "cd packages/types && npm run build && cd ../ui && npm run build && cd ../utils && npm run build",
    "start": "cd apps/web && npm run start",
    "lint": "cd apps/web && npm run lint",
    "test": "npm run type-check && cd apps/web && npm run test",
    "test:coverage": "cd apps/web && npm run test:coverage",
    "type-check": "tsc --noEmit && cd apps/web && npm run type-check",
    "type-check:watch": "tsc --noEmit --watch",
    "install-all": "npm install && cd apps/web && npm install",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "npx tsx prisma/seed.ts",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "reset": "npm run clean && npm install",
    "optimize": "node optimize-production.js",
    "docker:build": "docker build -t brenda-cereals .",
    "docker:run": "docker run -p 3000:3000 brenda-cereals",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose up -d",
    "health": "curl http://localhost:3000/api/health",
    "verify-ts": "npx tsx verify-typescript.ts",
    "diagnostic": "npx tsx diagnostic.ts",
    "metrics": "curl http://localhost:3000/api/metrics"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "prisma": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "next-auth": "^4.24.11",
    "qrcode": "^1.5.4"
  }
}
